<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/StyleTest.css")
    <!-- Render Script here -->
</head>
<body>
    <header>
        <div class="float-right">
            <section id="login">
                <fb:login-button autologoutlink="true"></fb:login-button>
            </section>
        </div>
    </header>
    <div id="body">
        <header>
            <div class="float-left" id="search">
                @Html.TextBox("text search")
                Going to make this a search box.
            </div>
        </header>
        @RenderSection("featured", required: false)
        @RenderBody()
        <footer>Boop. I'm a footer.</footer>
    </div>
    <footer></footer>
    @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <div id="fb-root"></div>
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Facebook.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                InitialiseFacebook(@System.Configuration.ConfigurationManager.AppSettings["FacebookAppId"]);
            });
        </script>
</body>
</html>
