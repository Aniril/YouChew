<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/StyleTest.css")
    <!-- Render Script here -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="../../Scripts/jquery.collapse.js"></script></head>

<body>
    <header>
        <div class="float-left"><h1>Welcome to You Chew</h1></div>
        <div class="float-right">
            <section id="login">
                <fb:login-button autologoutlink="true"></fb:login-button>
            </section>
        </div>
    </header>
    <div id="bodywrapper">
        <div id="body">
            <header>
                @RenderSection("top", required: false)
            </header>
            <div id="bodycontent">@RenderSection("bodycontent", required: false)</div>
            <div data-collapse>
                <span class="float-right">Click Me</span>
                <div class="featured">
                    @RenderSection("collapsible", required: false)
                </div>
            </div>
            <footer class="clear-both">
                <nav>
                    <ul id="menu" align="center">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
					    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
					    <li>@Html.ActionLink("Users","Index","User_Admin")</li>
                        <li>@Html.ActionLink("Restaurants","Index","Restaurant_Admin")</li>
					    <li>@Html.ActionLink("MapsTest", "MapsTest", "ViewTests")</li>
					    <li>@Html.ActionLink("Test Area","TestArea","Home")</li>
                    </ul>
                </nav>
            </footer>
        </div>
        <footer>@RenderBody()</footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <div id="fb-root"></div>
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Facebook.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                InitialiseFacebook(@System.Configuration.ConfigurationManager.AppSettings["FacebookAppId"]);
            });
        </script>
</body>
</html>
