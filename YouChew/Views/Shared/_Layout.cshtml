<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/StyleTest.css")
    <!-- Render Script here -->
    @RenderSection("pageScript", false)
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="../../Scripts/jquery.collapse.js"></script></head>

<body>
    <header>
        <div class="float-left" id="welcome"><h1>Welcome to You Chew</h1></div>
        <div class="float-right">
            <section id="login">
                @Html.Partial("_FacebookPartial")
            </section>
        </div>
    </header>
    <div id="bodywrapper">
        <div id="body">
            <header>
                @RenderSection("top", required: false)
            </header>
            <div id="bodycontent">@RenderBody()</div>
			<div>@RenderSection("collapsible", required: false)</div>
            <footer class="clear-both">
                <nav>
                    <ul id="menu" align="center">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <!--<li>@Html.ActionLink("About", "About", "Home")</li>-->
					    <!--<li>@Html.ActionLink("Contact", "Contact", "Home")</li>-->
					    <li>@Html.ActionLink("Users","Index","User_Admin")</li>
                        <li>@Html.ActionLink("Restaurants","Index","Restaurant_Admin")</li>
					    <!--<li>@Html.ActionLink("MapsTest", "MapsTest", "ViewTests")</li>-->
					    <li>@Html.ActionLink("Test Area","TestArea","Home")</li>
                        <li>@Html.ActionLink("User Info", "Info", "User")</li>
                    </ul>
                </nav>
            </footer>
        </div>
        <footer>@RenderSection("bottom", required: false)</footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
